<!-- 		SET  -->
<!-- 	</update> -->

<!-- 회원 정보 수정 -->
	<update id="updateMember">
		UPDATE member
		SET mem_email = #{mem_email}, mem_phoneNum = #{mem_phoneNum}, mem_postcode = #{mem_postcode}, mem_address = #{mem_address}
		WHERE mem_id = #{mem_id}
	</update>
</mapper>
